<!-- /snippets/social-media-links.liquid -->
{% if show_label == nil %}
  {% assign show_label = false %}
{% endif %}
{% if size == nil %}
  {%- assign size = 'small' -%}
{% endif %}
<div class="social-media-links {{ box_size }} flex items-center px-2 {% if centermd %} md:justify-center {% endif %}">
  {% if settings.social_pinterest_link != blank %}
    <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_pinterest_link }}">
        {% render 'icon', name: 'pinterest', size: size %}
        {% if settings.social_pinterest_label != blank and show_label %}
          <span class="pl-2.5 pr-4">{{ settings.social_pinterest_label }}</span>
        {% endif %}
    </a>
  {% endif %}
  {% if settings.social_facebook_link != blank %}
    <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_facebook_link }}">
        {% render 'icon', name: 'facebook', size: size %}
        {% if settings.social_facebook_label != blank and show_label %}
          <span class="pl-2.5 pr-4">{{ settings.social_facebook_label }}</span>
        {% endif %}
    </a>
  {% endif %}
  {% if settings.social_instagram_link != blank %}
    <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_instagram_link }}">
        {% render 'icon', name: 'instagram', size: size %}
        {% if settings.social_instagram_label != blank and show_label %}
          <span class="pl-2.5 pr-4">{{ settings.social_instagram_label }}</span>
        {% endif %}
    </a>
  {% endif %}
  {% if settings.social_twitter_link != blank %}
    <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_twitter_link }}">
        {% render 'icon', name: 'twitter', size: size %}
        {% if settings.social_twitter_label != blank and show_label %}
          <span class="pl-2.5 pr-4">{{ settings.social_twitter_label }}</span>
        {% endif %}
    </a>
  {% endif %}
  {% if settings.social_snapchat_link != blank %}
    <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_snapchat_link }}">
        {% render 'icon', name: 'snapchat', size: size %}
        {% if settings.social_snapchat_label != blank and show_label %}
          <span class="pl-2.5 pr-4">{{ settings.social_snapchat_label }}</span>
        {% endif %}
    </a>
  {% endif %}
  {% if settings.social_tumblr_link != blank %}
    <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_tumblr_link }}">
        {% render 'icon', name: 'tumblr', size: size %}
        {% if settings.social_tumblr_label != blank and show_label %}
          <span class="pl-2.5 pr-4">{{ settings.social_tumblr_label }}</span>
        {% endif %}
    </a>
  {% endif %}
  {% if settings.social_youtube_link != blank %}
    <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_youtube_link }}">
        {% render 'icon', name: 'youtube', size: size %}
        {% if settings.social_youtube_label != blank and show_label %}
          <span class="pl-2.5 pr-4">{{ settings.social_youtube_label }}</span>
        {% endif %}
    </a>
  {% endif %}
  {% if settings.social_vimeo_link != blank %}
    <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_vimeo_link }}">
        {% render 'icon', name: 'vimeo', size: size %}\
        {% if settings.social_vimeo_label != blank and show_label %}
          <span class="pl-2.5 pr-4">{{ settings.social_vimeo_label }}</span>
        {% endif %}
    </a>
  {% endif %}
</div>

