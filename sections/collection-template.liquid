{% render 'collection-template', section: section, show_breadcrumb: false %}

{% schema %}
  {
    "name": "Collection page",
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "type": "select",
        "id": "container",
        "label": "Container type",
        "default": "container",
        "options": [
            {
                "value": "container-fluid",
                "label": "Default"
            },
            {
                "value": "w-full",
                "label": "Full width"
            },
            {
                "value": "container",
                "label": "Use container box"
            }
        ]
      },
      {
        "type": "header",
        "content": "layout"
      },
      {
        "type": "select",
        "id": "grid_layout",
        "label": "Default layout",
        "options": [
          {
            "label": "Grid",
            "value": "grid"
          },
          {
            "label": "List",
            "value": "list"
          }
        ],
        "default": "grid"
      },
      {
        "type": "select",
        "id": "grid_columns",
        "label": "Default columns",
        "info": "For \"Grid\" layout and device width > 1024px",
        "options": [
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          }
        ],
        "default": "3"
      },
      {
        "type": "text",
        "id": "pagination_limit",
        "label": "Products per page",
        "default": "12"
      },
      {
        "type": "select",
        "id": "collection_paginate",
        "label": "Load more option",
        "options": [
          {
            "value": "paginate",
            "label": "Pagination"
          },
          {
            "value": "loadmore",
            "label": "\"Load More\" Button"
          },
          {
            "value": "autoscroll",
            "label": "Infinite Scroll"
          }
        ],
        "default": "paginate"
      },
      {
        "type": "checkbox",
        "id": "show_column_switcher",
        "label": "Show column switcher",
        "default": true
      },
      {
        "type": "header",
        "content": "Product filters"
      },
      {
        "type": "checkbox",
        "id": "show_filter",
        "label": "Show filters",
        "default": true
      },
      {
        "type": "select",
        "id": "sidebar",
        "label": "Position",
        "options": [
          {
            "value": "leftColumn",
            "label": "Left"
          },
          {
            "value": "rightColumn",
            "label": "Right"
          },
          {
            "value": "fixed",
            "label": "Fixed"
          }
        ],
        "default": "leftColumn"
      }
    ],
    "blocks": [
      {
        "type": "filter",
        "name": "Filter widget",
        "settings": [
          {
            "type": "header",
            "content": "Filter Group"
          },
          {
            "type": "paragraph",
            "content": "[Filter values correspond to the value \"Tags\" in the product.](https:\/\/docs.shopify.com\/manual\/your-store\/products\/edit-tags)"
          },
          {
            "type": "checkbox",
            "id": "show_filtergroup",
            "label": "Show filter group",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "use_accordion",
            "label": "Use accordion",
            "default": false
          },
          {
            "type": "checkbox",
            "id": "open_filtergroup",
            "label": "Open default",
            "default": true
          },
          {
            "type": "select",
            "id": "design_filtergroup",
            "label": "Design",
            "options": [
              {
                "value": "default",
                "label": "Links"
              },
              {
                "value": "inrow",
                "label": "Links inline"
              },
              {
                "value": "button",
                "label": "Buttons"
              },
              {
                "value": "button_rounded",
                "label": "Buttons rounded"
              },
              {
                "value": "color",
                "label": "Color Group"
              }
            ],
            "default": "default"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Group"
          },
          {
            "type": "textarea",
            "id": "filtergroup",
            "label": "Unique Tags List",
            "default": "dress,tops,shirts",
            "info": "Example: dress,tops,shirts"
          }
        ]
      },
      {
        "type": "collection_list",
        "name": "Collection lists",
        "limit": 1,
        "settings": [
          {
            "type": "checkbox",
            "id": "show_collectionlist",
            "label": "Show collection lists",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "use_accordion",
            "label": "Use accordion",
            "default": false
          },
          {
            "type": "checkbox",
            "id": "open_collectionlist",
            "label": "Open default",
            "default": true
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Collections"
          },
          {
            "type": "link_list",
            "id": "collectionlist_link",
            "label": "Collection link list"
          }
        ]
      }
    ]
  }
{% endschema %}
